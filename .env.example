# Application runtime configuration
APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
FRONTEND_DIST_DIR=frontend/dist

# Default LLM configuration
OPENAI_MODEL=openai/gpt-4.1-mini
OPENAI_API_KEY=sk-your-openai-key

# Database & vector stores
MONGODB_URI=mongodb://aws_copilot:change-me@localhost:27017/aws_copilot?authSource=admin
MONGODB_DB_NAME=aws_copilot
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=aws_copilot
MONGO_INITDB_ROOT_PASSWORD=change-me
MONGO_AUTH_SOURCE=admin
QDRANT_URL=https://qdrant.your-domain.com
QDRANT_API_KEY=your-qdrant-api-key

# AWS credential storage (secrets captured via UI and saved in MongoDB)
AWS_DEFAULT_REGION=us-east-1
AWS_CREDENTIAL_SOURCE=mongodb
AWS_CREDENTIALS_COLLECTION=aws_credentials
AWS_DEPLOYMENT_BUCKET=aws-copilot-artifacts
DEPLOYMENT_STACK_NAME=aws-copilot-app

# AgentPro runtime settings
AGENTPRO_GRAPH_PATH=agentpro/deploy_graph.yaml
AGENTPRO_RUNTIME_MODE=production
